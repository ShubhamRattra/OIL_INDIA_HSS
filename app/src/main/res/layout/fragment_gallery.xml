<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".ui.gallery.GalleryFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

    <ImageView
        android:id="@+id/sch_cont"
        android:layout_width="match_parent"
        android:layout_height="@dimen/_140sdp"
        android:layout_marginTop="@dimen/_5sdp"
        android:paddingTop="@dimen/_5sdp"
        android:src="@drawable/oilhss" />

    <TextView
        android:id="@+id/text_gallery"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingStart="@dimen/_10sdp"
        android:paddingEnd="@dimen/_10sdp"
        android:text="@string/aboutschoolcontent"
        android:textSize="@dimen/_11sdp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_weight="3">

            <ImageView
                android:id="@+id/sch_photo1"
                android:layout_width="wrap_content"
                android:layout_height="@dimen/_100sdp"
                android:layout_marginTop="@dimen/_1sdp"
                android:paddingTop="@dimen/_5sdp"
                android:layout_weight="1"
                android:src="@drawable/sch1" />

            <ImageView
                android:id="@+id/sch_photo2"
                android:layout_width="wrap_content"
                android:layout_height="@dimen/_100sdp"
                android:layout_marginTop="@dimen/_1sdp"
                android:paddingTop="@dimen/_5sdp"
                android:layout_weight="1"
                android:src="@drawable/sch2" />

            <ImageView
                android:id="@+id/sch_photo3"
                android:layout_width="wrap_content"
                android:layout_height="@dimen/_100sdp"
                android:layout_marginTop="@dimen/_1sdp"
                android:paddingTop="@dimen/_5sdp"
                android:layout_weight="1"
                android:src="@drawable/sch3" />


        </LinearLayout>


    <TextView
        android:id="@+id/text_gallery2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/Contributer"
        android:textColor="#000"
        android:textSize="@dimen/_16sdp"
        android:textStyle="italic"
        android:paddingTop="@dimen/_8sdp"
        android:paddingStart="@dimen/_10sdp" />

    <TextView
        android:id="@+id/text_gallery3"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/_2sdp"
        android:paddingStart="@dimen/_12sdp"
        android:paddingEnd="@dimen/_10sdp"
        android:text="@string/contri"
        android:textSize="@dimen/_11sdp" />

    </LinearLayout>

</ScrollView>