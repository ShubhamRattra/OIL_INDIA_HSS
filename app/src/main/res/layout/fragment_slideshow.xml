<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".ui.slideshow.SlideshowFragment">

    <ImageView
        android:id="@+id/sch_cont"
        android:layout_width="match_parent"
        android:layout_height="@dimen/_140sdp"
        android:layout_marginTop="@dimen/_5sdp"
        android:layout_marginBottom="@dimen/_4sdp"
        android:src="@drawable/location" />

    <TextView
        android:id="@+id/text_slideloc"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingStart="@dimen/_7sdp"
        android:paddingEnd="@dimen/_7sdp"
        android:paddingTop="@dimen/_5sdp"
        android:textSize="@dimen/_20sdp"
        android:text="@string/slideshow_addr"/>

    <TextView
        android:id="@+id/text_email"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingStart="@dimen/_7sdp"
        android:paddingEnd="@dimen/_7sdp"
        android:paddingTop="@dimen/_8sdp"
        android:textSize="@dimen/_20sdp"
        android:text="@string/slideshoe_email"/>

    <TextView
        android:id="@+id/text_phone"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingStart="@dimen/_7sdp"
        android:paddingEnd="@dimen/_7sdp"
        android:paddingTop="@dimen/_8sdp"
        android:textSize="@dimen/_20sdp"
        android:text="@string/slideshow_phone"/>

    <TextView
        android:id="@+id/text_slideclick1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingStart="@dimen/_5sdp"
        android:paddingEnd="@dimen/_5sdp"
        android:paddingTop="@dimen/_15sdp"
        android:text="@string/school_website"
        android:textSize="@dimen/_20sdp"
        android:textStyle="italic"/>

    <TextView
        android:id="@+id/text_slideclick2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingStart="@dimen/_5sdp"
        android:paddingEnd="@dimen/_5sdp"
        android:paddingTop="@dimen/_8sdp"
        android:text="@string/technomekanic_s_website"
        android:textSize="@dimen/_20sdp"
        android:textStyle="italic"/>

</LinearLayout>